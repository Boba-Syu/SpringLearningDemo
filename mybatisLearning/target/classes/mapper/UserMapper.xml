<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace为mapper的接口名 -->
<mapper namespace="com.boba.mapper.UserMapper">

    <!-- ID为实现的方法名, resultType为返回类型-->
    <select id="selectAll" resultType="com.boba.entity.User">
        select
            uid, uname, pwd
        from
            user
    </select>

    <select id="selectById" parameterType="int" resultType="com.boba.entity.User">
        select
            uid, uname, pwd
        from
            user
        where
            id = #{id}
    </select>
</mapper>